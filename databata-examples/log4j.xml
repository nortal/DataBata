<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"	debug="true">

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="DataBata %d{hh:mm:ss} %-5p - %c{2} - %m%n" />
		</layout>
	</appender>

	<category name="eu.databata.engine" additivity="false">
		<priority value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</category>

	<category name="org.springframework.jdbc.core.StatementCreatorUtils" additivity="false">
         <priority value="TRACE" />
         <appender-ref ref="CONSOLE" />
    </category>
	
	
	<category name="org.hsqldb.cmdline" additivity="false">
         <priority value="DEBUG" />
         <appender-ref ref="CONSOLE" />
    </category>
	
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</root>

</log4j:configuration>
